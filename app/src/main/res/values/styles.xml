<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Use MaterialComponents theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#E87C00</item>
        <item name="colorPrimaryDark">#C96A00</item>
        <item name="colorAccent">#E87C00</item>
    </style>

    <!-- For activities without ActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#E87C00</item>
        <item name="colorPrimaryDark">#C96A00</item>
        <item name="colorAccent">#E87C00</item>
    </style>

    <!-- Custom Text Input Layout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#E87C00</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">#E87C00</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <!-- Custom Dropdown Layout Style -->
    <style name="CustomDropdownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#E87C00</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">#E87C00</item>
        <item name="startIconTint">@color/colorPrimary</item>
    </style>

    <!-- Compact Text Input Layout Style for Tracking Number -->
    <style name="CompactTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextColor">@android:color/transparent</item>
        <item name="errorTextColor">#FF0000</item>
        <item name="errorIconDrawable">@null</item>
    </style>

</resources>