<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS for your production domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">bsitfoura.com</domain>
        <domain includeSubdomains="true">communityhealthcare.bsitfoura.com</domain>
    </domain-config>

    <!-- Allow HTTP for local development (optional, for testing) -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost for emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>

        <!-- Your local IP (for physical device on same WiFi) -->
        <domain includeSubdomains="true">192.168.0.0/16</domain>
        <domain includeSubdomains="true">192.168.100.2</domain>
        <domain includeSubdomains="true">192.168.41.63</domain>

        <!-- Optional: localhost for development -->
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>