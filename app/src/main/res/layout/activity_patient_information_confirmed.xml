<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success_circle"
        android:contentDescription="Success"
        android:layout_marginBottom="16dp" />

    <!-- Success Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Information Added Successfully!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Reminder -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Check your email app for your tracking number."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Dashboard"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#E87C00"
        app:cornerRadius="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Email App"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="16dp"
        android:elevation="4dp" />

</LinearLayout>
