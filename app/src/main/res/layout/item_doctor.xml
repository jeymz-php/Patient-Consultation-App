<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Doctor Avatar -->
        <ImageView
            android:id="@+id/ivDoctorAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_doctor_avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

        <!-- Doctor Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Juan Dela Cruz"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDoctorSpecialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Medicine"
                android:textColor="#E87C00"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Availability Indicator -->
        <TextView
            android:id="@+id/tvAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/availability_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>