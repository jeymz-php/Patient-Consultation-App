<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultation Details"
        android:textColor="#C96A00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Appointment Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F8F9FA"
        app:strokeColor="#E5E7EB"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/txtDialogAppointmentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024-01-15"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/txtDialogAppointmentTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/txtDialogStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduled"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_status_scheduled" />

                </LinearLayout>

            </LinearLayout>

            <!-- Remarks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/txtDialogRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular checkup appointment"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackConsultation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:backgroundTint="#6B7280"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinConsultation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Join"
            android:backgroundTint="#10B981"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>